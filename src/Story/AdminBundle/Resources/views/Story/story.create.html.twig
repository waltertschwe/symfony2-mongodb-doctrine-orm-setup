<!DOCTYPE html>
<html>
    <head>  
      <meta charset="utf-8">
      {% block stylesheets %}
            <link href="{{ asset('bundles/storyadmin/css/ckeditor.css') }}" type="text/css" rel="stylesheet" />
      {% endblock %}
      {% javascripts
      		'@StoryAdminBundle/Resources/public/js/jquery.js'
       %}
       <script src="{{ asset_url }}"></script>
		{% endjavascripts %}
		<script src="/symfony/web/js/ckeditor/ckeditor.js"></script>
		
    </head>
<body>
<h2>Create Story</h2>
<a href="/symfony/web/app_dev.php/story-admin">
<img src="/symfony/web/bundles/storyadmin/images/back-icon.png" />
</a>
{{ form_start(form) }}
    {{ form_errors(form) }}
	{{ form_row(form.storyName) }} 
	{{ form_row(form.author) }}<br/>
	{{ form_row(form.description) }} 
	<script type="text/javascript" charset="utf-8">
			CKEDITOR.replace( 'storyName_description', {
				uiColor: '#1C6BA0'
			});
		</script>
	<br/>
{{ form_end(form) }}

</body>
</html>
