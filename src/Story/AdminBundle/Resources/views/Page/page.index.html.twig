<!DOCTYPE html>
<html>
    <head>  
		 {{ include('StoryAdminBundle:Story:header/story.header.html.twig') }}
	</head>
<body id="dt_example">
{{ include('StoryAdminBundle:Story:story.nav.html.twig') }}
<div class="container">
<div class="starter-template">
	<h1><font color="red"> {{ story.storyName }}</font> - Pages</h1><br/>
	<p><a href="/symfony/web/app_dev.php/story-admin/page/create/{{ story.id }}/{{ page.newPageNumber }}">Create New Page</a></p>
	
	<div id="demo">
<table cellpadding="0" cellspacing="0" border="0" class="display" id="example" width="100%">
	<thead>
		<tr>
			<th style="text-align: center">Page Number</th>
			<th style="text-align: center">Page Name</th>
			<th style="text-align: center">Body</th>
			<th style="text-align: center">Decision</th>
			<th style="text-align: center">Actions</th>
		</tr>
	</thead>
	<tbody>
{% for page in story.pages %}
<tr class="odd gradeA">
	<td class="center">
		<a href="/symfony/web/app_dev.php/story-admin/page/update/{{ story.id }}/{{ page.pageNumber }}"> {{ page.pageNumber }}</a>
	</td>
	<td class="center">
		<a href="/symfony/web/app_dev.php/story-admin/page/update/{{ story.id }}/{{ page.pageNumber }}">
			{{ page.pageName }} 
		</a>		
	</td>
	<td class="center">{{ page.body }} </td>
	<td class="center">{{ page.decision }} </td>
	<td class="center">
	<a href="/symfony/web/app_dev.php/story-admin/page/update/{{ story.id }}/{{ page.pageNumber }}">
	<img src="{{ asset('bundles/storyadmin/images/page_icon.png') }}" /></a>&nbsp;
	<img src="{{ asset('bundles/storyadmin/images/json.png') }}" />&nbsp;
	<!-- <img src="{{ asset('bundles/storyadmin/images/callback.jpg') }}" />&nbsp; -->
	<a href="/symfony/web/app_dev.php/story-admin/page/delete/{{ story.id }}/{{ page.pageNumber }}"><img src="{{ asset('bundles/storyadmin/images/delete16x16.gif') }}" /></a>&nbsp;
	</td>
{% endfor %}
</tbody>
	<tfoot>
		<tr>
			<th style="text-align: center">Page Number</th>
			<th style="text-align: center">Page Name</th>
			<th style="text-align: center">Body</th>
			<th style="text-align: center">Decision</th>
			<th style="text-align: center">Actions</th>
		</tr>
	</tfoot>
</table></div>
</div>
</div>
</body>
</html>