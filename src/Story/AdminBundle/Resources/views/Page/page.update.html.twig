     	 {{ include('StoryAdminBundle:Story:header/story.header-editor.html.twig') }}
	</head>
<body>
{{ include('StoryAdminBundle:Story:story.nav.html.twig') }}
{% for flashMessage in app.session.flashbag.get('notice') %}
	<!-- FLASH MESSAGE -->
	    <div class="flash-notice">
		    <font color="red"> {{ flashMessage }} </font> 
	    </div>
	<!-- END FLASH MESSAGE -->
{% endfor %}
<div class="container">
  <div class="starter-template">
<h2>Page Update</h2>
<a href="/symfony/web/app_dev.php/story-admin/pages/{{ storyId }}">
