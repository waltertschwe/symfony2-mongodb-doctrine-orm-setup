</a>

{{ form_start(form) }}
    {{ form_errors(form) }}
	{{ form_row(form.pageName) }} <br/>
	{{ form_row(form.pageNumber) }} <br/>
	{{ form_row(form.body) }} <br/>
	<script type="text/javascript" charset="utf-8">
		CKEDITOR.replace( 'pageName_body', {
			uiColor: '#1C6BA0'
		});
	</script>
	{{ form_row(form.choice1) }} 
	{{ form_row(form.choice2) }}
	{{ form_row(form.choice3) }} 
